#pragma once

// This is an example file. To use it, rename it to "wifi_credentials.h"
// and replace the placeholder values with your actual WiFi credentials.
// The "wifi_credentials.h" file is ignored by Git to keep your secrets safe.

// =============================================================================
// Security Settings
// =============================================================================

// OTA (Over-the-Air) Update Password
// IMPORTANT: Change this to a strong, unique password!
// This password protects your device from unauthorized firmware updates.
const char* OTA_PASSWORD = "YourStrongOTAPassword123!";

// WebSocket Authentication Password
// IMPORTANT: Change this to prevent unauthorized control of your timer!
// This password is required to control the timer via the web interface.
const char* WEB_PASSWORD = "YourWebInterfacePassword456!";

// =============================================================================
// WiFi Network Credentials
// =============================================================================

struct WiFiCredential {
    const char* ssid;
    const char* password;
};

// Static array of known WiFi networks (replaces std::vector for better memory safety)
// Add your WiFi networks here. The ESP32 will try each one in order.
const WiFiCredential known_networks[] = {
    {"YOUR_SSID_1", "YOUR_PASSWORD_1"},
    {"YOUR_SSID_2", "YOUR_PASSWORD_2"},
    {"AnotherSSIDWithNoPassword", ""}  // Use empty string for open networks
};

// Number of networks in the array
const size_t known_networks_count = sizeof(known_networks) / sizeof(WiFiCredential);
